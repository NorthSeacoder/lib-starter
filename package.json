  "homepage": "https://github.com/NorthSeacoder/lib-starter/README.md",
  "bugs": {
    "url": "https://github.com/NorthSeacoder/lib-starter/issues"
  },
  "author": "NorthSeacoder",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NorthSeacoder/lib-starter.git"
  },
  "license": "MIT",
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "sideEffects": false,
  "type": "module",
  "devDependencies": {
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "@antfu/ni": "^27.0.1",
    "@arethetypeswrong/cli": "^0.18.2",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "bumpp": "^10.3.1",
    "esbuild-visualizer": "^0.7.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.2.1",
    "execa": "^9.5.2",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "rimraf": "^6.1.0",
    "simple-git-hooks": "^2.11.1",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.9"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "cz": "git add . && git-cz",
    "clean": "rimraf dist stats.html",
    "dev": "tsx src/cli/run.ts",
    "dev:watch": "tsx watch src/cli/run.ts",
    "start": "node bin/starter.cjs",
    "build": "nr clean && tsup",
    "build:watch": "tsup --watch",
    "analyze": "nr clean && tsup --metafile && esbuild-visualizer --metadata ./dist/metafile-*.json --open",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run src",
    "test:e2e": "vitest run test/e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-exports": "attw --pack .",
    "typecheck": "tsc --noEmit",
    "ci": "nr lint:check && nr format:check && nr typecheck && nr test:coverage && nr build",
    "prepublishOnly": "npm run ci",
    "release": "bumpp && npm publish",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
