  "keywords": [
    "template",
    "typescript",
    "library",
    "cli",
    "starter",
    "development"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@8.14.1",
  "bin": {
    "starter": "bin/starter.cjs"
  },
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
